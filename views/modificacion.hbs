<h1>Datos del elemento que desea modificar</h1>
<br>
<br>

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Selecionar ID 
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
  <form action="/modificar" method="POST" name="selecionar_id">
  {{#each datos }}
    <a class="dropdown-item" href="/modificar/{{id}}" >{{_id}} || {{nombre}}</a>
  {{/each}}
  </form>
  </div>
</div>
<form action="/grabar" method="POST">
    <div class="form-group">
    <label for="nombre">Nombre:</label>
      <input type="text" class="form-control" id="nombre"
              placeholder="Nombre Perfume" name="nombre">
    </div>
    <div class="form-group">
      <label for="marca">Marca:</label>
      <input type="text" class="form-control" id="marca"
              placeholder="Marca del Perfume" name="imagen">
    </div>
    <div class="form-group">
      <label for="aroma">Aroma:</label>
      <input type="text" class="form-control" id="aroma"
              placeholder="Aroma del Perfume" name="imagen">
    </div>
    <div class="form-group">
      <label for="cantidad">Cantidad:</label>
      <input type="number" class="form-control" id="cantidad"
              placeholder="Cantidad del Perfume" name="imagen">
    </div>
    <div class="form-group">
      <label for="precio">Precio:</label>
      <input type="number" class="form-control" id="precio"
              placeholder="Precio del Perfume" name="precio">
    </div>
    <div class="form-group">
      <label for="tipo">Tipo:</label>
      <input type="text" class="form-control" id="tipo"
              placeholder="Tipo del Perfume" name="tipo">
    </div>
    <div class="form-group">
      <label for="foto">Foto:</label>
      <input type="text" class="form-control" id="foto"
              placeholder="Foto del Perfume" name="foto">
    </div>
    <button type="submit" class="btn btn-primary">Modificar</button>
</form>
