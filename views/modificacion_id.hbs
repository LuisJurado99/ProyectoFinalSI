<form action="/modificar/{{id}}" method="POST">
    <div class="form-group">
    <label for="nombre">Nombre: </label>
      <input type="text" class="form-control" id="nombre" value="{{nombre}}"
              placeholder="nombre" name="nombre">
    </div>
    <div class="form-group">
      <label for="marca">Marca:</label>
      <input type="text" class="form-control" id="marca" value="{{marca}}"
              placeholder="Marca del Perfume" name="marca">
    </div>
    <div class="form-group">
      <label for="aroma">Aroma:</label>
      <input type="text" class="form-control" id="aroma" value="{{aroma}}"
              placeholder="Aroma del Perfume" name="aroma">
    </div>
    <div class="form-group">
      <label for="cantidad">Cantidad:</label>
      <input type="number" class="form-control" id="cantidad" value="{{cantidad}}"
              placeholder="Cantidad del Perfume" name="cantidad">
    </div>
    <div class="form-group">
      <label for="precio">Precio:</label>
      <input type="number" class="form-control" id="precio" value="{{precio}}"
              placeholder="Precio del Perfume" name="precio">
    </div>
    <div class="form-group">
      <label for="tipo">Tipo:</label>
      <input type="text" class="form-control" id="tipo" value="{{tipo}}"
              placeholder="Tipo del Perfume" name="tipo">
    </div>
    <div class="form-group">
      <label for="foto">Foto:</label>
      <input type="text" class="form-control" id="foto" value="{{foto}}"
              placeholder="Foto del Perfume" name="foto">
    </div>
    <button type="submit" class="btn btn-primary">Modificar</button>
    
</form>
